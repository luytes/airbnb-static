---
title: Le Wagon Middleman boilerplate
---
    <!-- Banner -->

<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/innkeeper.jpg');">
      <div class="banner-content">
        <h1>Hearthstone</h1>
        <p>Busy night...but there's always room for another!</p>
        <form action="#" class="form-inline">
          <input type="text" class="form-control input-lg" placeholder="checkin">
          <input type="text" class="form-control input-lg" placeholder="checkout">
          <select name="" id="" class="form-control input-lg">
            <option value="1">1 person</option>
            <option value="2">2 persons</option>
            <option value="3">3 persons</option>
          </select>
          <input type="submit" class="btn btn-primary btn-lg" value="GET IN">
        </form>
      </div>
    </div>

    <!-- Features -->

    <div class="container text-center padded features">
      <div class="row">
      <% data.icons.each do |icon| %>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <!-- <img src="images/globe.png" alt=""> -->
          <%= image_tag icon.pic %>
          <h3><%= icon.h3%></h3>
          <p><%= icon.p %></p>
        </div>
      <% end %>
      </div>
    </div>

    <!-- Your cards code -->

    <div class="wrapper-grey padded">
      <div class="container">
        <h2 class="text-center">Your next Opponent</h2>
        <div class="row">
        <% data.players.each do |play|%>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,100,168,0.8) 0%, rgba(0,36,61,0.6) 50%), url(images/<%= play.background %>);">
              <div class="card-category"><%= play.classi %></div>
              <div class="card-description">
                <h3><%= play.name %></h3>
                <p><%= play.description %></p>
              </div>
              <%= image_tag play.pic, class: "avatar card-user card-size" %>
              <a href="" class="card-link"></a>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>

        <!-- Your newsletter code -->

    <div class="container">
      <div class="form-group text-center padded">
      <h2>Sign Up For Hearthstone</h2>
        <form action="#" class="form-inline">
          <input type="email" class="form-control" placeholder="innkeeper@hs.com">
          <input type="submit" value="Sign Up" class="btn btn-primary">
        </form>
      </div>
    </div>

